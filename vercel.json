{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json", 
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "npm run build", 
          "installCommand": "npm run install"
        }
      },
      {
        "src": "server/package.json", 
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      }
    ]
  }
  